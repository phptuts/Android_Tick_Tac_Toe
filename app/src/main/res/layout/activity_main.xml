<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noahglaser.ticktactoe.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/board"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/board"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect1"
        app:layout_constraintTop_toTopOf="@+id/connect2"
        android:alpha="0"
        app:layout_constraintRight_toLeftOf="@+id/connect2"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect2"
        app:layout_constraintTop_toTopOf="@+id/board"
        android:layout_marginTop="48dp"
        android:alpha="0"
        app:layout_constraintRight_toRightOf="@+id/board"
        app:layout_constraintLeft_toLeftOf="@+id/board" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect3"
        android:alpha="0"
        app:layout_constraintRight_toRightOf="@+id/board"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/board"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintTop_toTopOf="@+id/connect2" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect4"
        app:layout_constraintLeft_toLeftOf="@+id/connect1"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/board"
        app:layout_constraintTop_toTopOf="@+id/board" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect5"
        android:alpha="0"
        app:layout_constraintRight_toRightOf="@+id/connect2"
        app:layout_constraintTop_toTopOf="@+id/connect4" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect6"
        android:alpha="0"
        app:layout_constraintRight_toRightOf="@+id/connect3"
        app:layout_constraintTop_toTopOf="@+id/connect5" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect7"
        app:layout_constraintLeft_toLeftOf="@+id/connect4"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@+id/connect8" />
    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect8"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/board"
        android:layout_marginBottom="32dp"
        app:layout_constraintRight_toRightOf="@+id/connect5" />
    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect9"
        android:alpha="0"
        app:layout_constraintRight_toRightOf="@+id/connect6"
        app:layout_constraintTop_toTopOf="@+id/connect8" />
</android.support.constraint.ConstraintLayout>
