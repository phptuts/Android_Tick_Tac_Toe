<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noahglaser.ticktactoe.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/board"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/board"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect1"
        app:layout_constraintLeft_toLeftOf="@+id/board"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@+id/connect2"
        android:alpha="0" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect2"
        app:layout_constraintTop_toTopOf="@+id/board"
        android:layout_marginTop="50dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toRightOf="@+id/connect1"
        android:layout_marginLeft="48dp"
        android:alpha="0" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect3"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@+id/connect2"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/connect2"
        android:alpha="0" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect4"
        app:layout_constraintLeft_toLeftOf="@+id/connect1"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/connect1"
        android:alpha="0" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect5"
        app:layout_constraintTop_toTopOf="@+id/connect4"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toRightOf="@+id/connect4"
        android:layout_marginLeft="48dp"
        android:alpha="0" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect6"
        app:layout_constraintTop_toTopOf="@+id/connect4"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@+id/connect5"
        android:layout_marginLeft="50dp"
        android:alpha="0" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect7"
        app:layout_constraintLeft_toLeftOf="@+id/connect4"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/connect4"
        android:alpha="0" />
    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect8"
        app:layout_constraintTop_toTopOf="@+id/connect7"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@+id/connect7"
        android:layout_marginLeft="50dp"
        android:alpha="0" />
    <ImageView
        android:layout_width="87dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/red"
        android:id="@+id/connect9"
        app:layout_constraintTop_toTopOf="@+id/connect8"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@+id/connect8"
        android:layout_marginLeft="50dp"
        android:alpha="0"
        />
</android.support.constraint.ConstraintLayout>
